<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.saram.androidchatmomentchat.ConversationActivity">

    <ListView
        android:id="@+id/list_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp">
    </ListView>

    <Button android:text="Picture"
        android:id="@+id/button_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F44336"
        android:layout_centerHorizontal="true">
    </Button>
    <Button android:text="Video"
        android:id="@+id/button_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button_picture"
        android:layout_toStartOf="@+id/button_picture">
    </Button>
    <Button android:text="Audio"
        android:id="@+id/button_audio"
        android:layout_width="wrap_content"
        android:background="#f1c40f"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_picture"
        android:layout_toEndOf="@+id/button_picture">
    </Button>

</RelativeLayout>

